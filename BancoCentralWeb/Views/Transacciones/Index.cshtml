@model BancoCentralWeb.Models.Transacciones.TransaccionListResponse

@{
    ViewData["Title"] = "Transacciones";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">
                <i class="fas fa-exchange-alt"></i> Transacciones
            </h1>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lista de Transacciones</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="transaccionesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Referencia Externa</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                        <th>Monto</th>
                        <th>Moneda</th>
                        <th>Fecha Creaci√≥n</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model?.Transacciones != null)
                    {
                        @foreach (var transaccion in Model.Transacciones)
                        {
                            <tr>
                                <td>@transaccion.RefExterna</td>
                                <td>@transaccion.Tipo</td>
                                <td>
                                    <span class="badge bg-@(transaccion.Estado == "contabilizada" ? "success" : transaccion.Estado == "validada" ? "info" : transaccion.Estado == "borrador" ? "warning" : "danger")">
                                        @transaccion.Estado
                                    </span>
                                </td>
                                <td>@transaccion.MontoTotal.ToString("N2")</td>
                                <td>@transaccion.Moneda</td>
                                <td>@transaccion.CreadaEn.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Detalles", new { id = transaccion.TransaccionId })" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No hay transacciones registradas</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model != null && Model.Total > Model.PageSize)
        {
            <div class="d-flex justify-content-between align-items-center mt-3">
                <div>
                    Mostrando @Model.PageSize de @Model.Total registros
                </div>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        @if (Model.Page > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { page = Model.Page - 1, pageSize = Model.PageSize })">Anterior</a>
                            </li>
                        }
                        
                        @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min((int)Math.Ceiling((double)Model.Total / Model.PageSize), Model.Page + 2); i++)
                        {
                            <li class="page-item @(i == Model.Page ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = Model.PageSize })">@i</a>
                            </li>
                        }
                        
                        @if (Model.Page < (int)Math.Ceiling((double)Model.Total / Model.PageSize))
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { page = Model.Page + 1, pageSize = Model.PageSize })">Siguiente</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#transaccionesTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es.json'
                },
                pageLength: 10,
                ordering: true,
                searching: false
            });
        });
    </script>
}