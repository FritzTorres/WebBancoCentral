@model BancoCentralWeb.Models.Instituciones.InstitucionResponse

@{
    ViewData["Title"] = "Detalles de la Institución";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">
                <i class="fas fa-building"></i> Detalles de la Institución
            </h1>
            <div>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>

@if (Model != null)
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Información de la Institución</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>ID de Institución:</strong>
                        </div>
                        <div class="col-md-6">
                            @Model.InstitucionId
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Código SIB:</strong>
                        </div>
                        <div class="col-md-6">
                            @Model.CodigoSib
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Nombre:</strong>
                        </div>
                        <div class="col-md-6">
                            @Model.Nombre
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Tipo:</strong>
                        </div>
                        <div class="col-md-6">
                            @Model.Tipo
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Estado:</strong>
                        </div>
                        <div class="col-md-6">
                            <span class="badge bg-@(Model.Activo ? "success" : "danger")">
                                @(Model.Activo ? "Activa" : "Inactiva")
                            </span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Fecha de Creación:</strong>
                        </div>
                        <div class="col-md-6">
                            @Model.CreadoEn.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Información Adicional</h6>
                </div>
                <div class="card-body">
                    <h6 class="fw-bold">Tipo de Institución:</h6>
                    <p>@Model.Tipo</p>
                    
                    <h6 class="fw-bold">Estado Operativo:</h6>
                    <p>
                        @if (Model.Activo)
                        {
                            <span class="text-success"><i class="fas fa-check-circle"></i> Operativa</span>
                        }
                        else
                        {
                            <span class="text-danger"><i class="fas fa-times-circle"></i> No Operativa</span>
                        }
                    </p>
                    
                    <h6 class="fw-bold">Código de Identificación:</h6>
                    <p><strong>SIB:</strong> @Model.CodigoSib</p>
                    
                    <h6 class="fw-bold">Fecha de Registro:</h6>
                    <p>@Model.CreadoEn.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i> No se encontró la institución solicitada.
    </div>
}