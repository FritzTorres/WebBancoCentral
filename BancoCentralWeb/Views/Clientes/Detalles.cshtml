@model BancoCentralWeb.Models.Clientes.ClienteResponse

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">
                <i class="fas fa-user"></i> Detalles del Cliente
            </h1>
            <div>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>

@if (Model != null)
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Información del Cliente</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Cédula/RNC:</strong>
                        </div>
                        <div class="col-md-6">
                            @Model.CedulaRnc
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Nombre Completo:</strong>
                        </div>
                        <div class="col-md-6">
                            @Model.NombreCompleto
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Tipo de Cliente:</strong>
                        </div>
                        <div class="col-md-6">
                            <span class="badge bg-info">@Model.TipoCliente</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>KYC Vigente Hasta:</strong>
                        </div>
                        <div class="col-md-6">
                            @if (Model.KycVigenteHasta.HasValue)
                            {
                                if (Model.KycVigenteHasta.Value > DateTime.Now)
                                {
                                    <span class="badge bg-success">@Model.KycVigenteHasta.Value.ToString("dd/MM/yyyy")</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@Model.KycVigenteHasta.Value.ToString("dd/MM/yyyy")</span>
                                }
                            }
                            else
                            {
                                <span class="badge bg-secondary">No definido</span>
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Fecha de Creación:</strong>
                        </div>
                        <div class="col-md-6">
                            @Model.CreadoEn.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Acciones</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <form asp-action="EmitirCertificadoSolvencia" method="post">
                            <input type="hidden" name="id" value="@Model.ClienteId" />
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-certificate"></i> Emitir Certificado de Solvencia
                            </button>
                        </form>
                        <a href="@Url.Action("Abrir", "Cuentas", new { clienteId = Model.ClienteId })" class="btn btn-success">
                            <i class="fas fa-plus-circle"></i> Abrir Nueva Cuenta
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Cuentas del Cliente</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.Cuentas != null)
                    {
                        var cuentas = ViewBag.Cuentas as BancoCentralWeb.Models.Cuentas.CuentaListResponse;
                        if (cuentas?.Cuentas != null && cuentas.Cuentas.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Producto</th>
                                            <th>Moneda</th>
                                            <th>Estado</th>
                                            <th>Saldo</th>
                                            <th>Fecha Apertura</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var cuenta in cuentas.Cuentas)
                                        {
                                            <tr>
                                                <td>@cuenta.Producto</td>
                                                <td>@cuenta.Moneda</td>
                                                <td>
                                                    <span class="badge bg-@(cuenta.Estado == "activa" ? "success" : cuenta.Estado == "bloqueada" ? "warning" : "danger")">
                                                        @cuenta.Estado
                                                    </span>
                                                </td>
                                                <td>@cuenta.Saldo.ToString("N2")</td>
                                                <td>@cuenta.AbiertaEn.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    <a href="@Url.Action("Detalles", "Cuentas", new { id = cuenta.CuentaId })" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> Este cliente no tiene cuentas registradas.
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> No se pudieron cargar las cuentas del cliente.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i> No se encontró el cliente solicitado.
    </div>
}